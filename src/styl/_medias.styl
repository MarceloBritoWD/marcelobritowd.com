// Media Queries
@media screen and (max-width 799px)
	header
		width 90%
		margin-left -45%
		margin-top 0px
		top 5%

@media screen and (max-width 480px)
	html, body
		height none

	#geral
		width 100%
		position absolute
		z-index 1
		opacity .9
		display table

	.perfil .pic-name img
		margin 0 0 0 -10px