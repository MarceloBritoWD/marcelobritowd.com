.header
  width 100%
  height 450px
  background #222 url(/assets/img/background.jpg) no-repeat center -200px fixed
  background-size(cover)
  display table
  position relative

.author
  width 500px
  height auto
  display table
  position absolute
  // background #f52
  top 50%
  left 50%
  transform(translate(-50%, -50%))

.img-author
  width 150px
  height 150px
  border-radius(50%)
  border 6px solid rgba(#fff, .5)
  display table
  float left
  margin-right 20px

.author-name
  font-size 3em
  line-height 100%
  color #fff
  font-weight bold
  margin 40px 0 0 0
  text-shadow 0px 2px 0px #888

.author-info
  font-size 1.5em
  color #fff
  font-weight 400
  font-style italic
  text-shadow 0px 2px 0px #888


.nav
  position fixed
  top 5px
  right 8px

  ul
    width auto

    li
      display inline
      float left
      margin-right 10px
      &:last-child
        margin-right 0

      a
        font-size 15px
        color #727272
        text-transform uppercase
        &:hover
          color @color - 40%




main
  width 700px
  height auto
  display table
  margin 0 auto
  // background #f9f9f9

.content
  width 100%
  padding 55px 25px 15px 25px
  display table

.item-post
  width 100%
  height auto
  display table
  float left
  margin-bottom 50px
  @extend .temTransicaoSimples
  &:hover
    opacity .7

  a
    width 100%
    height @width
    float left

.post-title
  font-size 35px
  line-height 100%
  color #343434
  font-weight 700

.post-date
  font-size 18px
  color #747474
  text-transform uppercase
  margin-bottom 10px

.post-preview
  font-size 18px
  line-height 120%
  color #666

.post-content
  font-size 20px
  line-height 130%
  color #747474
  font-weight 300
  margin-top 20px
  margin-bottom 20px
  p
    margin-bottom 15px
    a
      color #000


  h2, h3
    font-size: 22px
    color: #333
    font-weight: bold
    margin 25px 0 0 0


footer
  width 100%
  height 100px
  display table
  position relative

.social
  width auto
  display table
  position absolute
  top 50%
  left 50%
  transform(translate(-50%, -50%))

  li
    display inline
    float left
    margin-right 15px
    &:last-child
      margin-right 0

    a
      font-size 20px
      color #4C4C4C
      text-shadow: 0px 1px 0px #fff



.highlight
  width 100%
  margin 0 0 15px 0
  padding 20px
  background #303340
  border-radius(4px)

  // pre
  //   background #222
  //   width 100%
  //   color sec
  //   margin-bottom 0
  //   font-size rem(14px)

  code
    width: auto;
    max-width: 50rem;
    float: none;
    display: block;
    margin-right: auto;
    margin-left: auto;
    padding-left: 0;
    padding-right: 0;
    padding: 0 1.25rem;

  span
      line-height 1.5rem


  .hll
      background-color #333
  .c,     // Comment
  .cm,    // Comment.Multiline
  .cp,    // Comment.Preproc
  .c1,    // Comment.Single
  .cs     // Comment.Special
      color #75715e

  // Error
  .err
      color #960050
      background-color #1e0010

  .k,     // Keyword
  .kc,    // Keyword.Constant
  .kd,    // Keyword.Declaration
  .kp,    // Keyword.Pseudo
  .kr,    // Keyword.Reserved
  .kt,    // Keyword.Type
  .no     // Name.Constant
      color #66d9ef

  .l,     // Literal
  .mf,    // Literal.Number.Float
  .mh,    // Literal.Number.Hex
  .mi,    // Literal.Number.Integer
  .mo,    // Literal.Number.Oct
  .se,    // Literal.String.Escape
  .il     // Literal.Number.Integer.Long
      color #ae81ff

  .o,     // Operator
  .p      // Punctuation
      color #f7f7f2

  .m,     // Literal.Number
  .n,     // Name
  .nb,    // Name.Builtin
  .ni,    // Name.Entity
  .nl,    // Name.Label
  .nn,    // Name.Namespace
  .py,    // Name.Property
  .nv,    // Name.Variable
  .w,     // Text.Whitespace
  .bp,    // Name.Builtin.Pseudo
  .vc,    // Name.Variable.Class
  .vg,    // Name.Variable.Global
  .vi     // Name.Variable.Instance
      color #a4d043

  .kn,    // Keyword.Namespace
  .nt,    // Name.Tag
  .ow     // Operator.Word
      color #f92672

  .ge     // Generic.Emph
      font-style italic

  .gs     // Generic.Strong
      font-weight bold

  .ld,    // Literal.Date
  .s,     // Literal.String
  .sb,    // Literal.String.Backtick
  .sc,    // Literal.String.Char
  .sd,    // Literal.String.Doc
  .s2,    // Literal.String.Double
  .sh,    // Literal.String.Heredoc
  .si,    // Literal.String.Interpol
  .sx,    // Literal.String.Other
  .sr,    // Literal.String.Regex
  .s1,    // Literal.String.Single
  .ss     // Literal.String.Symbol
      color #e6db74

  .na,    // Name.Attribute
  .nc,    // Name.Class
  .nd,    // Name.Decorator
  .ne,    // Name.Exception
  .nf,    // Name.Function
  .nx     // Name.Other
      color #a6e22e
