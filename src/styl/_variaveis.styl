// variaveis
corPrincipal = #000
corTextos = #fff


// mixins
border-radius(radius)
	-webkit-border-radius radius
	-moz-border-radius radius
	-ms-border-radius radius
	border-radius radius

box-sizing(border)
	-webkit-box-sizing border
	-moz-box-sizing border
	-o-box-sizing border
	box-sizing border
	
