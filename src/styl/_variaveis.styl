@import url('http://fonts.googleapis.com/css?family=Oxygen+Mono')


// reset
*
	outline-color invert
	outline-style none
	outline-width medium
	box-sizing(border-box)

html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, font, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, dl, dt, dd, ol, ul, li, fieldset, form, label, input, select, textarea, legend, table, caption, tbody, tfoot, thead, tr, th, td
	margin 0
	padding 0
	border none
	outline 0
	font-weight normal
	font-style inherit
	font-size inherit
	font-family inherit
	vertical-align baseline


body
	font-family 'Oxigen Mono', sans-serif
	background corPrincipal
	color corTextos
	

ol, ul
	list-style none

a, a&:visited, button
	color corTextos
	text-decoration none
	border none


// index
html, body
	height 100%
	

// geral
#geral
	width 100%
	height 100%
	position absolute
	z-index 1
	opacity .9

header
	largura = 800px
	width largura
	height auto
	position absolute
	z-index 3
	top 50%
	left 50%
	margin-top -283.5px
	margin-left -(largura / 2)


// perfil
.perfil
	width auto
	text-align center
	
.pic-name
	display table
	margin 0 auto

	img
		width 280px
		height 280px
		border 10px solid rgba(255,255,255,.6)
		border-radius(50%)
		// animation(ratateIn 1s ease)
		

	.title
		font-size 50px
		margin 10px 0 15px 0
		// animation(fadeInUp 1.5s ease)
	

	.user-name
		font-size 15px
		// animation(fadeInDown 1.5s ease)
			
	p
		font-size 13px
		line-height 18px
		margin-top 30px
		// animation(fadeInUpTwo 2s ease)
	
	a
		border-bottom 1px solid corTextos
		padding-bottom 1px
		
		&:hover
			opacity .7
			


// social
.social
	width auto
	dimensionIcons = 32px
	height dimensionIcons
	margin 20px auto
	display table
	
	li
		height dimensionIcons
		
		&:hover
			opacity .4
			
		&:last-child
			margin-right 0
			
